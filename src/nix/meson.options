# vim: filetype=meson

# A relative path means it gets appended to prefix.
option(
  'profile-dir',
  type : 'string',
  value : 'etc/profile.d',
  description : 'the path to install shell profile files',
)

option(
  'pch',
  type : 'combo',
  choices : [ 'auto', 'enabled', 'disabled' ],
  value : 'auto',
  description : 'Use C++ Precompiled Headers to speed up compilation',
  yield : true,
)

