# Nix-Perl build options
#============================================================================


# compiler args
#============================================================================

option(
  'tests',
  type : 'feature',
  value : 'disabled',
  description : 'run nix-perl tests')


# Location of Perl Modules
#============================================================================
option(
  'dbi_path',
  type : 'string',
  value : '/usr',
  description : 'path to perl::dbi')

option(
  'dbd_sqlite_path',
  type : 'string',
  value : '/usr',
  description : 'path to perl::dbd-SQLite')
