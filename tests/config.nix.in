rec {
  shell = "@bash@";

  path = "@coreutils@";

  system = "@system@";

  shared = builtins.getEnv "_NIX_TEST_SHARED";

  mkDerivation = args:
    derivation ({
      inherit system;
      builder = shell;
      args = ["-e" args.builder or (builtins.toFile "builder-${args.name}.sh" "if [ -e .attrs.sh ]; then source .attrs.sh; fi; eval \"$buildCommand\"")];
      PATH = path;
    } // removeAttrs args ["builder" "meta"])
    // { meta = args.meta or {}; };
}
